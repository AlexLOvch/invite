<h2>Sign in</h2>

<%= form_tag sessions_path do %>  
  <div>  
    <%= label_tag :email %><br />  
    <%= email_field :email,'' %>  
  </div>  
  <div>  
    <%= label_tag :password %><br />  
    <%= password_field_tag :password %>  
  </div>  
  <div class="button"><%= submit_tag %></div>  
<% end %>  